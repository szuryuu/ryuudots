# Urgency levels
[urgency=low]
background-color=#000000
text-color=#e5e5e5
border-color=#808080

[urgency=normal]
background-color=#000000
text-color=#ffffff
border-color=#ffffff

[urgency=high]
background-color=#1a1a1a
text-color=#ffffff
border-color=#ffffff
border-size=3
ignore-timeout=1

# Basic settings
layer=overlay
anchor=top-right
