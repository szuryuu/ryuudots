@import "mocha.css";

* {
    border: none;
    border-radius: 0;
    font-family: Hack Nerd Font, monospace;
    font-weight: bold;
    font-size: 14px;
    min-height: 0;
}

window#waybar {
    background: @base;
    color: @text;
    opacity: 0.85
}

window#waybar.empty #window {
    background: transparent;
}

#workspaces button {
    padding: 5px;
    color: @sapphire;
    /* margin-right: 5px; */
}

#workspaces button.active {
    color: @sapphire;
}

#workspaces button.focused {
    color: @sapphire;
    background: @base;
    /* border-radius: 10px; */
}

#workspaces button.urgent {
    color: @red;
    background: @base;
    /* border-radius: 10px; */
}

#workspaces button:hover {
    background: @crust;
    color: @text; 
    /* border-radius: 10px; */
}

#window,
#clock,
#battery,
#pulseaudio,
#network,
#cpu,
#memory,
#custom-spotify,
#custom-logout,
#workspaces,
#tray,
#backlight {
    background: @base;
    padding: 10px 0px;
    margin: 0px 0px;
    border-top: 2px dashed @text;
    border-bottom: 2px dashed @text;
}

#backlight {
    /* border-radius: 10px 0px 0px 10px; */
    color: @green;
    border-bottom: 0px;
}

#tray {
    /* border-radius: 10px; */
    /* margin-right: 10px; */
    border-top: 0px;
}

#workspaces {
    background: @base;
    /* border-radius: 10px; */
    /* margin-left: 10px; */
    padding-right: 0px;
    padding-left: 5px;
}

#cpu {
    /* border-radius: 0px 10px 10px 0px; */
    color: @maroon;
    border-bottom: 0px;
}

#memory {
    /* border-radius: 10px 0px 0px 10px; */
    color: @red;
    border-bottom: 0px;
    margin-top: 5px;
}

#window {
    color: @yellow;
    padding-left: 5px;
    border-bottom: 0px;
    border-top: 0px;
    margin-top: 5px;
}

#clock {
    /* border-radius: 10px 10px 10px 10px; */
    color: @blue;
    border-bottom: 0px;
    margin-top: 5px;
}

#network {
    color:  @peach;
    /* border-radius: 10px 0px 0px 10px; */
    border-bottom: 0px;
}

#pulseaudio {
    color: @teal;
    border-bottom: 0px;
}

#pulseaudio.microphone {
    color: @sky;
    /* border-radius: 0px 10px 10px 0px; */
    margin-bottom: 5px;
    border-bottom: 2px dashed @text;
}

#battery {
    color: @yellow;
    /* border-radius: 0px 10px 10px 0px; */
}

#custom-spotify {
    color: @green;
}

#custom-logout {
    color: @sky;
    margin-bottom: 5px;
}

#custom-arrow-left {
    margin-top: 5px;
}
